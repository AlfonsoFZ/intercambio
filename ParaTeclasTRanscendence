    <!-- (Opcional) Un pequeño script para dibujar algo en el canvas -->
    <script>
      const canvas = document.getElementById("gameCanvas");
      const ctx = canvas.getContext("2d");

      if (ctx) {
        ctx.font = "20px sans-serif";
        ctx.textAlign = "center";
        ctx.fillText("Aquí va tu juego / lógica", canvas.width / 2, canvas.height / 2);
      }
    </script>
